---
import header from '@data/header.json';

interface Props {}
---

<header id='header'>
  <img src='../../public/assets/icons/vscode.svg' alt='vscode icon' />
  <ul>
    {header.options.map((item) => <li>{item}</li>)}
  </ul>
</header>
<style>
  #header {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 40px;
    background-color: var(--black2);
  }
  img {
    width: 25px;
    height: 25px;
    margin: auto 20px;
  }
  ul {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  li {
    padding: 0.2rem 1rem;
    color: var(--text);
    cursor: default;
    user-select: none;
  }
  li:hover {
    background-color: var(--grey2);
    border-radius: 0.5rem;
    user-select: none;
  }
</style>
